# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/digital-competency-platform
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/digital-competency-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-refresh-secret-key-here-also-make-it-long-and-random
JWT_EXPIRE_TIME=15m
JWT_REFRESH_EXPIRE_TIME=7d

# Email Configuration (Gmail example)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM_NAME=Digital Competency Platform
EMAIL_FROM_ADDRESS=your-email@gmail.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
BCRYPT_SALT_ROUNDS=12
OTP_EXPIRE_TIME=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Assessment Configuration
DEFAULT_QUESTION_TIME_MINUTES=1
MAX_ASSESSMENT_TIME_HOURS=2
QUESTIONS_PER_STEP=44
TOTAL_COMPETENCIES=22
